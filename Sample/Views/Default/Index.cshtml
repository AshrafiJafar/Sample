
@model List<Person>

    <a href="Default/Create">Add</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Father Name</th>
                <th>Age</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.FatherName</td>
                <td>@item.Age</td>
                <td>@item.PhoneNumber</td>
                <td>
                    <a href="/Default/Edit/@item.Id">Edit</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
