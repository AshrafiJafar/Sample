@model IEnumerable<Person>

<a href="Default/Create">Add</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(x => x.Id)</th>
            <th>@Html.DisplayNameFor(x => x.FirstName)</th>
            <th>@Html.DisplayNameFor(x => x.LastName)</th>
            <th>@Html.DisplayNameFor(x => x.Gender)</th>
            <th>@Html.DisplayNameFor(x => x.FatherName)</th>
            <th>@Html.DisplayNameFor(x => x.Age)</th>
            <th>@Html.DisplayNameFor(x => x.PhoneNumber)</th>
            <th>@Html.DisplayNameFor(x => x.CreatedTime)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@(item.Gender == 0 ? "Female" : "Male")</td>
                <td>@item.FatherName</td>
                <td>@item.Age</td>
                <td>@item.PhoneNumber</td>
                <td>@item.CreatedTime</td>
                <td>
                    <a href="/Default/Edit/@item.Id">Edit</a> |
                    <a href="/Default/Delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
